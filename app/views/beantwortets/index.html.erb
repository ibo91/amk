<h1>Listing beantwortets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beantwortets.each do |beantwortet| %>
      <tr>
        <td><%= beantwortet.user %></td>
        <td><%= link_to 'Show', beantwortet %></td>
        <td><%= link_to 'Edit', edit_beantwortet_path(beantwortet) %></td>
        <td><%= link_to 'Destroy', beantwortet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beantwortet', new_beantwortet_path %>
