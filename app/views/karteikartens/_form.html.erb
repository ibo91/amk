<%= form_for @karteikarten, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :titel, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :titel, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vorderseite, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :vorderseite, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rueckseite, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :rueckseite, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :aufrufe, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :aufrufe, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  karteikartens_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
