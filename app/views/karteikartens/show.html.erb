<%- model_class = Karteikarten -%>
<div class="page-header">
  <h1><%=t '.title', :default => Karteikarten %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:titel) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarten.titel %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:vorderseite) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarten.vorderseite %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rueckseite) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarten.rueckseite %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:aufrufe) %></dt>
      <dd><pre class="prettyprint"><%= @karteikarten.aufrufe %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              karteikartens_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_karteikarten_path(@karteikarten), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              karteikarten_path(@karteikarten),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

